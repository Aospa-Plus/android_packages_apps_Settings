<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res-auto"
    android:title="@string/aospaplus_version_title">

    <!-- aospaplusOS logo -->
    <com.android.settingslib.widget.LayoutPreference
        android:key="aospaplus_logo"
        android:layout="@layout/aospaplus_logo"
        android:selectable="false"/>

    <!-- aospaplusOS version -->
    <Preference
        android:key="aospaplus_os_version"
        android:title="@string/aospaplus_version_title"
        android:summary="@string/summary_placeholder"
        settings:enableCopying="true"
        settings:searchable="false"
        settings:controller="com.android.settings.deviceinfo.AospaplusVersionDetailPreferenceController"/>

    <!-- Build type -->
    <Preference
        android:key="aospaplus_build_type"
        android:title="@string/aospaplus_build_type"
        android:summary="@string/summary_placeholder"
        android:selectable="false"
        settings:enableCopying="true"/>

    <!-- Build variant -->
    <Preference
        android:key="aospaplus_build_variant"
        android:title="@string/aospaplus_build_variant"
        android:summary="@string/summary_placeholder"
        android:selectable="false"
        settings:enableCopying="true"/>

    <!-- CLO revision -->
    <Preference
        android:key="aospaplus_clo_revision"
        android:title="@string/aospaplus_clo_revision"
        android:summary="@string/summary_placeholder"
        android:selectable="false"
        settings:enableCopying="true"/>

    <!-- Device name -->
    <Preference
        android:key="aospaplus_device"
        android:title="@string/aospaplus_device"
        android:summary="@string/summary_placeholder"
        android:selectable="false"
        settings:enableCopying="true"/>

    <!-- Device maintainer -->
    <Preference
        android:key="aospaplus_device_maintainer"
        android:title="@string/aospaplus_device_maintainer"
        android:summary="@string/summary_placeholder"
        settings:enableCopying="true"/>

</PreferenceScreen>